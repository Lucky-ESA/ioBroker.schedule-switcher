{
  "name": "iobroker.schedule-switcher",
  "version": "0.0.12",
  "description": "Switch states over scheduler",
  "author": {
    "name": "Lucky-ESA",
    "email": "github@luckyskills.de"
  },
  "homepage": "https://github.com/Lucky-ESA/ioBroker.schedule-switcher",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "schedule",
    "time-switch",
    "control",
    "roller shutter",
    "Power outlet"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Lucky-ESA/ioBroker.schedule-switcher.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "node-schedule": "^2.1.1",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.1.1",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^24.9.2",
    "@types/node-schedule": "^2.1.8",
    "@types/suncalc": "^1.9.2",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "widgets/**/!(tsconfig|tsconfig.*|.eslintrc).json",
    "widgets/**/*.{html,css,png,svg,jpg,js}",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/Lucky-ESA/ioBroker.schedule-switcher/issues"
  },
  "readmeFilename": "README.md"
}
